# Neurlyn Production Environment Configuration
# Copy this file to .env and update with your production values

# Application
NODE_ENV=production
PORT=3000
BASE_URL=https://your-domain.com

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/neurlyn?retryWrites=true&w=majority

# Authentication
JWT_SECRET=your-very-long-random-string-here-change-this-in-production

# Stripe Payment Integration
STRIPE_SECRET_KEY=sk_live_your_stripe_live_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@your-domain.com

# Monitoring & Analytics (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project
GA_TRACKING_ID=UA-XXXXXXXXX-X
MIXPANEL_TOKEN=your-mixpanel-token

# Security
SESSION_SECRET=another-very-long-random-string-here
CORS_ORIGIN=https://your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AWS S3 (optional - for backups)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BACKUP_BUCKET=neurlyn-backups

# Redis (optional - for session store)
REDIS_URL=redis://username:password@redis-server:6379

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Feature Flags
ENABLE_PREMIUM_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_EMAIL_NOTIFICATIONS=false

# API Keys (optional)
OPENAI_API_KEY=sk-your-openai-api-key
GOOGLE_MAPS_API_KEY=your-google-maps-key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 3 * * *"
BACKUP_RETENTION_DAYS=30